{
    "name": "GetMeQR",
    "version": "1.0",
    "description": "Convert current URL or selected text or clipboard content into QR Code image and displays it.",
    "browser_action": {
        "default_icon": "icon.png",
        "popup": "popup.html"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "tabs",
        "clipboardRead",
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["http://*/*"],
            "js": ["getselection.js"],
            "run_at": "document_start",
            "all_frames": true
        }
    ]
}